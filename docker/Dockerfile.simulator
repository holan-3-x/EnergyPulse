# Dockerfile for EnergyPulse Smart Meter Simulator

# Stage 1: Build
FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files first for caching
COPY go.mod go.sum ./
RUN apk add --no-cache gcc musl-dev
RUN go mod download

# Copy source code
COPY . .

# Build
RUN CGO_ENABLED=1 GOOS=linux go build -o /simulator ./cmd/simulator

# Stage 2: Runtime
FROM alpine:3.19

RUN apk add --no-cache ca-certificates sqlite-libs

WORKDIR /app

# Copy binary from builder
COPY --from=builder /simulator .

# Run the application
CMD ["./simulator"]
