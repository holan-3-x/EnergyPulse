# Dockerfile for EnergyPulse Frontend (React/Vite)
FROM node:18-alpine

WORKDIR /app

# Copy package files from static directory
COPY static/package.json static/package-lock.json* ./

# Install dependencies
RUN npm install

# Copy the rest of the frontend code
COPY static/ .

# Expose Vite port (default 3000 as per vite.config.ts)
EXPOSE 3000

# Run in development mode
CMD ["npm", "run", "dev"]
